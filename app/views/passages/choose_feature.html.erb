<main class="container pt-3">
  <div class="row">
    <h1><%= t('.title', passage: @passage.name) %></h1>
    <section class="col-sm-12">
      <%= form_with model: @passage, url: add_to_feature_passage_path(@passage), method: :put, class: 'form-row' do |form| %>
        <div class="form-group col-sm-12">
          <%= form.label :feature_id, t('.choose_feature') %>
          <%= form.select :feature_id, nil, {}, {class: 'form-control'} do %>
            <%= option_groups_from_collection_for_select(current_user.projects, :features, :name, :id, :name) %>
          <% end %>
        </div>
        <div class="form-group col-sm-12">
          <%= form.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </section>
    <section class="col-sm-12">
      <div class="btn-group btn-group-sm">
        <%= link_to icon('arrow-left', t('back')), :back, class: 'btn btn-secondary' %>
      </div>
    </section>
  </div>
</main>