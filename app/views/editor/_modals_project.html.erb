<%# Contains Modal for Project creation%>

<%# Project creation %>
<div class="modal fade" id="createProject" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('new_project') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for Project.new do |form| %>
        <div class="modal-body">
          <%= form.hidden_field :user_id, value: current_user.id, required: true %>
          <div class="form-group">
            <%= form.label Project.human_attribute_name('name') %>
            <%= form.text_field :name, class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= form.label Project.human_attribute_name('description') %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit class: 'btn btn-success' %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal" onClick="this.form.reset()">
            <%= t('close') %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>