<%# This view allows to register as a user. Therefore, Name, Email, Password and Description are necessary. %>
<%# It's also needed to agree to the terms of services and correctly answer the security question. %>

<main class="container pt-3">
  <h2><%= t('.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-row">
      <div class="form-group col-sm-6">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

      </div>

      <div class="form-group col-sm-6">
        <%= f.label :email %><br/>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => "at least 6 characters: lower- and uppercase characters and digit(s)", autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.label :description %><br/>
        <%= f.text_area :description, :maxlength => 250 ,class: 'form-control' %>
      </div>

      <div class="form-group col-sm-6">
        <% security_question = SecurityQuestion.where(locale: locale).sample %>
        <%= f.hidden_field :question_id, value: security_question.id.to_s %>
        <%= f.label :security_answer, security_question.question %>
        <%= f.text_field :security_answer, class: 'form-control', autocomplete: "off" %>
      </div>

      <div class="form-group col-sm-12">
        <div class="custom-control custom-checkbox">
          <%= f.check_box :terms, class: 'custom-control-input' %>
          <%= f.label :terms, class: 'custom-control-label' %>
          <small id="Help" class="form-text text-muted"><%= link_to t('devise.registration.termshelp'), '#terms', data:{toggle:'modal'} %></small>
        </div>
      </div>

      <div class="actions col-sm-12">
        <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

