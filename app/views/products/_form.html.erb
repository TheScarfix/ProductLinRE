<%= form_with(model: product, local: true, class: 'form-row') do |form| %>
  <%= form.error_messages %>

  <div class="form-group col-sm-12">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <p><%= t('products.connect_to_features_of_the_project') %></p>
    <%= collection_check_boxes(:product, :feature_ids, @product.project.features, :id, :name) do |check| %>
      <div class="custom-control custom-checkbox">
        <%= check.check_box(class: 'custom-control-input') %>
        <%= check.label(class: 'custom-control-label') %>
      </div>
    <% end %>
  </div>
  <div class="form-group col-sm-12">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>