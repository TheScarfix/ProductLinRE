<main class="container pt-3">
  <%= render 'shared/alert_notice' %>
  <div class="row">
    <h1><%= t('.title', project: @project.name) %></h1>
    <section class="col-sm-12">
      <div class="btn-group btn-group-sm">
        <%= link_to t('project.show_in_editor'), editor_path(project: @project.id), class: 'btn btn-primary' %>
        <%= link_to_if check_user_permission(@project), icon('edit', t('edit')), edit_project_path(@project), class: 'btn btn-secondary' do %>
        <% end %>
        <%= link_to icon('copy', t('copy')), copy_project_path(@project), method: :post, class: 'btn btn-secondary' %>
        <%= link_to_if check_user_permission(@project), icon('trash', t('delete')), project_path(@project), method: :delete, data: {confirm: t('are_you_sure')}, class: 'btn btn-danger' do %>
        <% end %>
      </div>
    </section>
    <section class="col-sm-12 pt-3">
      <table class="table table-bordered table-sm">
        <thead class="thead-light">
        <tr>
          <th>
            <%= Project.human_attribute_name('description') %>
          </th>
          <th>
            <%= Project.human_attribute_name('created_at') %>
          </th>
          <th>
            <%= Project.human_attribute_name('updated_at') %>
          </th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>
            <%= @project.description %>
          </td>
          <td>
            <%= @project.created_at.to_formatted_s(:long) %>
          </td>
          <td>
            <%= @project.updated_at.to_formatted_s(:long) %>
          </td>
        </tr>
        </tbody>
      </table>
    </section>
    <%= render 'product_list' %>
    <%= render 'feature_list' %>
    <section class="col-sm-12">
      <div class="btn-group btn-group-sm">
        <%= link_to icon('arrow-left', t('back_to_editor')), editor_index_path(project: @project.id), class: 'btn btn-secondary' %>
        <%= link_to icon('arrow-left', t('back_to_list')), projects_path, class:'btn btn-secondary' %>
      </div>
    </section>
  </div>
</main>