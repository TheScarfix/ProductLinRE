<%= form_with(model: project, local: true, class: 'form-row') do |form| %>
  <%= form.error_messages %>
  <%= form.hidden_field :user_id, value: current_user.id, required: true %>
  <div class="form-group col-sm-12">
    <%= form.label Project.human_attribute_name('name') %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>
  <div class="form-group col-sm-12">
    <%= form.label Project.human_attribute_name('description') %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>

