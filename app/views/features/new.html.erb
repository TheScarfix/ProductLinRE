<main class="container pt-3">
  <div class="row">
    <h1><%= t('new_feature') %></h1>
    <section class="col-sm-12">
      <%= form_for [@project, Feature.new], html: {class: 'form-row'} do |form| %>
        <%= form.error_messages %>
        <div class="form-group col-sm-12">
          <%= form.label :name %>
          <%= form.text_field :name, id: :feature_name, class: "form-control" %>
        </div>
        <div class="form-group col-sm-12">
          <%= form.label :description %>
          <%= form.text_area :description, id: :feature_description, class: "form-control" %>
        </div>
        <div class="form-group col-sm-12">
          <%= form.submit class: "btn btn-success" %>
        </div>
      <% end %>
    </section>
    <section class="col-sm-12">
      <div class="btn-group btn-group-sm">
        <%= link_to icon('arrow-left', t('back')), :back, class: 'btn btn-secondary' %>
      </div>
    </section>
  </div>
</main>