<%= form_with(model: feature, local: true, class: 'form-row') do |form| %>
  <%= form.error_messages %>
  <div class="form-group col-sm-12">
    <%= form.label :name %>
    <%= form.text_field :name, id: :feature_name, class: "form-control" %>
  </div>

  <div class="form-group col-sm-12">
    <%= form.label :description %>
    <%= form.text_area :description, id: :feature_description, class: "form-control" %>
  </div>

  <div class="form-group col-sm-12">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
